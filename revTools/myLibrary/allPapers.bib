  local-url = {file://localhostC:\%5CUsers\%5CThinkPad\%5COneDrive\%20-\%20Bournemouth\%20University\%5CPapersApp\%20Watching\%5CPanjabi\%202006\%20A\%20hypothesis\%20of\%20chronic\%20back\%20pain.pdf}, 
  year = {2006}
}
@article{10.3390/ijerph17093250, 
  author = {Manzotti, Andrea and Viganoni, Chiara and Lauritano, Dorina and Bernasconi, Silvia and Paparo, Alice and Risso, Rachele and Nanussi, Alessandro}, 
