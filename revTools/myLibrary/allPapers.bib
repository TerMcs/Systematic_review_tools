@article{10.1016/j.jelekin.2019.07.008, 
  author = {Besomi, Manuela and Hodges, Paul W and Dieën, Jaap Van and Carson, Richard G and Clancy, Edward A. and Disselhorst-Klug, Catherine and Holobar, Aleš and Hug, François and Kiernan, Matthew C and Lowery, Madeleine and McGill, Kevin and Merletti, Roberto and Perreault, Eric and Søgaard, Karen and Tucker, Kylie and Besier, Thor and Enoka, Roger and Falla, Deborah and Farina, Dario and Gandevia, Simon and Rothwell, John C and Vicenzino, Bill and Wrigley, Tim}, 
