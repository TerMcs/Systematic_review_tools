  number = {12}, 
  volume = {22}, 
  journal = {European Spine Journal}, 
  local-url = {file://localhostC:\%5CUsers\%5CThinkPad\%5CDocuments\%5CPapers\%20Library\%5CShin-Investigation\%20of\%20coupled\%20bending\%20of\%20the\%20lumbar\%20spine\%20during\%20dynamic\%20axial\%20rotation\%20of\%20the\%20body-2013-European\%20Spine\%20Journal.pdf}, 
