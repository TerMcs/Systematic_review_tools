  number = {11}, 
  volume = {10}, 
  journal = {PLOS ONE}, 
  year = {2015}
}
@article{10.1016/j.jbiomech.2019.109515, 
  author = {Wawrose, Richard A. and LeVasseur, Clarissa M. and Byrapogu, Venkata K. and Dombrowski, Malcolm E. and Donaldson, William F. and Shaw, Jeremy D. and Lee, Joon Y. and Anderst, William J. and Aiyangar, Ameet K.}, 
