  number = {1}, 
  volume = {136}, 
  journal = {Journal of Biomechanical Engineering}, 
  local-url = {file://localhostC:\%5CUsers\%5CThinkPad\%5COneDrive\%20-\%20Bournemouth\%20University\%5CPapersApp\%20Watching\%5Caiyangar2013.pdf}, 
  year = {2013}
}
