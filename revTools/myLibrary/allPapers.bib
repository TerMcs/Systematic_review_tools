  journal = {Journal of Biomechanics}, 
  local-url = {file://localhostC:\%5CUsers\%5CThinkPad\%5COneDrive\%20-\%20Bournemouth\%20University\%5CPapersApp\%20Watching\%5C1-s2.0-S0021929017302099-main.pdf}, 
