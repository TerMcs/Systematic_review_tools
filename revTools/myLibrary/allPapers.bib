  number = {1}, 
  volume = {27}, 
  journal = {European Spine Journal}, 
  local-url = {file://localhostC:\%5CUsers\%5CThinkPad\%5COneDrive\%20-\%20Bournemouth\%20University\%5CPhD\%20Project\%5CQuantitative\%20Fluoroscopy\%5CBreen,\%20Breen\%20-\%202018\%20-\%20Uneven\%20intervertebral\%20motion\%20sharing\%20is\%20related\%20to\%20disc\%20degeneration\%20and\%20is\%20greater\%20in\%20patients\%20with\%20chronic,\%20non-.pdf}, 
