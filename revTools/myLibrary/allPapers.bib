  number = {6}, 
  volume = {23}, 
  journal = {European Journal of Pain}, 
  local-url = {file://localhostC:\%5CUsers\%5CThinkPad\%5COneDrive\%20-\%20Bournemouth\%20University\%5CPapersApp\%20Watching\%5Cejp.1384.pdf}, 
  year = {2019}
}
@article{10.3390/healthcare4010004, 
  author = {Rose, Alister du and Breen, Alan}, 
  title = {{Relationships between Paraspinal Muscle Activity and Lumbar Inter-Vertebral Range of Motion}}, 
