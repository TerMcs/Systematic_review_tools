}
@article{10.1007/s10439-015-1268-9, 
  author = {Ross, Gwyneth B. and Mavor, Matthew and Brown, Stephen H. M. and Graham, Ryan B.}, 
  title = {{The Effects of Experimentally Induced Low Back Pain on Spine Rotational Stiffness and Local Dynamic Stability}}, 
