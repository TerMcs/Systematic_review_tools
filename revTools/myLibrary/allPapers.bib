  volume = {5}, 
  journal = {Frontiers in Psychology}, 
  local-url = {file://localhostC:\%5CUsers\%5CThinkPad\%5COneDrive\%20-\%20Bournemouth\%20University\%5CPapersApp\%20Watching\%5CVirtual\%20reality\%20and\%20consciousness\%20inference\%20in\%20dreaming.pdf}, 
