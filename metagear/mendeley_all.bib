file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Ackerley, Aimonetti, Ribot-Ciscar - 2017 - Emotions alter muscle proprioceptive coding of movements in humans.pdf:pdf},
issn = {20452322},
journal = {Scientific Reports},
number = {1},
pages = {1--9},
