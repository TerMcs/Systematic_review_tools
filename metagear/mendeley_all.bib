journal = {European Journal of Applied Physiology},
keywords = {Blood volume,Erector spinae,Near infrared spectroscopy,Oxygenation},
number = {5-6},
pages = {499--507},
title = {{Reliability of erector spinae oxygenation and blood volume responses using near-infrared spectroscopy in healthy males}},
volume = {91},
year = {2004}
