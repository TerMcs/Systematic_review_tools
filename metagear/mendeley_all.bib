doi = {10.1016/j.autneu.2017.09.003},
file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Adlan et al. - 2017 - Cardiovascular autonomic regulation, inflammation and pain in rheumatoid arthritis.pdf:pdf},
issn = {18727484},
journal = {Autonomic Neuroscience: Basic and Clinical},
keywords = {Autonomic nervous system,Parasympathetic,Physiological,Stress},
number = {September},
