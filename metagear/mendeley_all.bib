file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Sanderson et al. - 2019 - The effect of chronic, non-specific low back pain on superficial lumbar muscle activity a protocol for a syste.pdf:pdf},
issn = {20446055},
keywords = {EMG,electromyography,low back pain,motor control,muscle activity},
month = {oct},
