file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Goubert et al. - 2016 - Structural changes of lumbar muscles in non-specific low back pain(2).pdf:pdf},
issn = {21501149},
