isbn = {1299802000304},
issn = {2045709X},
journal = {Chiropractic and Manual Therapies},
keywords = {Low back pain,Lumbar spine,Manual therapy,Spinal manipulation,Spinal mobilization,Spinal stiffness},
number = {1},
pages = {1--13},
title = {{Potential mechanisms for lumbar spinal stiffness change following spinal manipulative therapy: A scoping review}},
volume = {28},
year = {2020}
}
