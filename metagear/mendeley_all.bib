issn = {16625102},
journal = {Frontiers in Cellular Neuroscience},
keywords = {Dorsal root ganglion,Exercise pressor reflex,Ischemia,Muscle pain,Primary afferents},
number = {December},
pages = {1--15},
title = {{Peripheral mechanisms of ischemic Myalgia}},
volume = {11},
year = {2017}
}
@article{Kang2016,
