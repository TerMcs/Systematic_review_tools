keywords = {Fat infiltration,Low back pain,Magnetic resonance imaging,Muscle activity,Muscle atrophy,Trunk muscles},
number = {9},
pages = {1285--1296},
title = {{Lumbar muscle structure and function in chronic versus recurrent low back pain: a cross-sectional study}},
