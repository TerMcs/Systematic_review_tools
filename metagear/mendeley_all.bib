pages = {E1--E9},
publisher = {Lippincott Williams and Wilkins},
title = {{Flexion-Relaxation Ratio Asymmetry and Its Relation with Trunk Lateral ROM in Individuals with and Without Chronic Nonspecific Low Back Pain}},
