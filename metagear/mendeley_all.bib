file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Davydov et al. - 2018 - Asymmetries in reciprocal baroreflex mechanisms and chronic pain severity Focusing on irritable bowel syndrome.pdf:pdf},
issn = {13652982},
journal = {Neurogastroenterology and Motility},
keywords = {asymmetrical baroreflex reciprocity,chronic pain severity,heart rate variability,irritable bowel syndrome,pain resilience and adaptation,systolic blood pressure},
