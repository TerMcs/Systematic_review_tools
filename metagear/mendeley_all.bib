doi = {10.1186/1471-2474-13-146},
file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Shiro et al. - 2012 - Effect of muscle load tasks with maximal isometric contractions on oxygenation of the trapezius muscle and sympath.pdf:pdf},
issn = {14712474},
journal = {BMC Musculoskeletal Disorders},
keywords = {Chronic neck and shoulder pain,Muscle oxygenation,Sympathetic nervous activity},
title = {{Effect of muscle load tasks with maximal isometric contractions on oxygenation of the trapezius muscle and sympathetic nervous activity in females with chronic neck and shoulder pain}},
