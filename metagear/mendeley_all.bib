issn = {18791271},
journal = {Clinical Biomechanics},
keywords = {Cervical spine,Disc height loss,Flexion/extension,Intervertebral disc,Osteophytes,Quantitative fluoroscopy},
number = {July 2017},
pages = {11--17},
