issn = {21682372},
journal = {IEEE Journal of Translational Engineering in Health and Medicine},
keywords = {Super pixels,ensemble learning,lumbar spine segmentation,robust segmentation},
number = {May},
title = {{Multi-Parameter Ensemble Learning for Automated Vertebral Body Segmentation in Heterogeneously Acquired Clinical MR Images}},
volume = {5},
