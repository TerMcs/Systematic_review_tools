doi = {10.1080/001401300184369},
file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/McGill, Hughson, Parks - 2000 - Lumbar erector spinae oxygenation during prolonged contractions Implications for prolonged work.pdf:pdf},
