file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Perrey, Ferrari - 2018 - Muscle Oximetry in Sports Science A Systematic Review.pdf:pdf},
issn = {11792035},
journal = {Sports Medicine},
number = {3},
pages = {597--616},
publisher = {Springer International Publishing},
title = {{Muscle Oximetry in Sports Science: A Systematic Review}},
