file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Nahman-Averbuch et al. - 2016 - Sex differences in the relationships between parasympathetic activity and pain modulation.pdf:pdf},
issn = {1873507X},
journal = {Physiology and Behavior},
keywords = {Pain modulation,Parasympathetic activity,Sex differences},
pages = {40--48},
publisher = {Elsevier Inc.},
title = {{Sex differences in the relationships between parasympathetic activity and pain modulation}},
url = {http://dx.doi.org/10.1016/j.physbeh.2015.11.004},
volume = {154},
year = {2016}
