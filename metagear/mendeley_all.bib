file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Shang et al. - 2012 - Noninvasive optical characterization of muscle blood flow, oxygenation, and metabolism in women with fibromyalgia.pdf:pdf},
issn = {14786354},
journal = {Arthritis Research and Therapy},
number = {6},
