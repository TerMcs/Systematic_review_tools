issn = {00039993},
journal = {Archives of Physical Medicine and Rehabilitation},
keywords = {Low back pain,Rehabilitation,Spectroscopy near-infrared},
number = {3},
pages = {536--542},
title = {{An exercise therapy program can increase oxygenation and blood volume of the erector spinae muscle during exercise in chronic low back pain patients}},
