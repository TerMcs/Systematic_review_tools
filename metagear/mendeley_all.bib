doi = {10.1007/s00586-014-3273-3},
file = {:C$\backslash$:/Users/ThinkPad/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Mellor et al. - 2014 - Proportional lumbar spine inter-vertebral motion patterns a comparison of patients with chronic, non-specific (2).pdf:pdf},
