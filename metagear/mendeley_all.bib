journal = {Clinical Biomechanics},
keywords = {Flexion relaxation,Lumbar,Muscle,Posture,Sitting,Spine},
number = {5},
pages = {353--360},
pmid = {12084539},
publisher = {Clin Biomech (Bristol, Avon)},
title = {{Examination of the flexion relaxation phenomenon in erector spinae muscles during short duration slumped sitting}},
