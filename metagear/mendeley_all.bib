issn = {13032968},
journal = {Journal of Sports Science and Medicine},
keywords = {Discomfort,Muscle oxygenation,NIRS,Walk,Walking},
number = {2},
pages = {337--343},
title = {{The effect of prolonged walking with intermittent standing on erector spinae and soleus muscle oxygenation and discomfort}},
volume = {18},
year = {2019}
}
@article{Olivier2013a,
