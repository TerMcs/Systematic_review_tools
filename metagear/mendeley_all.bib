issn = {18735711},
journal = {Journal of Electromyography and Kinesiology},
keywords = {Fatigue,Low back pain,Self-efficacy,S{\o}rensen,Trunk endurance},
month = {feb},
pages = {1--7},
pmid = {30447543},
publisher = {Elsevier Ltd},
title = {{S{\o}rensen test performance is driven by different physiological and psychological variables in participants with and without recurrent low back pain}},
