journal = {Journal of Electromyography and Kinesiology},
keywords = {Aging,EMG,Low back pain,Muscle fatigue},
month = {dec},
number = {6},
pages = {928--936},
publisher = {Elsevier Ltd},
title = {{Back muscle fatigue of younger and older adults with and without chronic low back pain using two protocols: A case-control study}},
